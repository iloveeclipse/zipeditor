<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            id="archive"
            name="%content-type.name.0"
            priority="normal"/>
      <content-type
            base-type="archive"
            describer="zipeditor.model.ZipContentDescriber"
            id="zipfile"
            name="%content-type.name.1"
            priority="normal">
         <property
               default="ZIP"
               name="ZipEditor.archiveType"/>
      </content-type>
      <content-type
            base-type="archive"
            describer="zipeditor.model.ZipContentDescriber"
            id="targzfile"
            name="%content-type.name.2"
            priority="normal">
         <property
               default="TGZ"
               name="ZipEditor.archiveType"/>
      </content-type>
      <content-type
            base-type="archive"
            describer="zipeditor.model.ZipContentDescriber"
            id="tarfile"
            name="%content-type.name.3"
            priority="normal">
         <property
               default="TAR"
               name="ZipEditor.archiveType"/>
      </content-type>
      <content-type
            base-type="archive"
            describer="zipeditor.model.ZipContentDescriber"
            id="gzipfile"
            name="%content-type.name.4"
            priority="normal">
         <property
               default="GZ"
               name="ZipEditor.archiveType"/>
      </content-type>
      <content-type
            base-type="archive"
            describer="zipeditor.model.ZipContentDescriber"
            id="bz2file"
            name="%content-type.name.5"
            priority="normal">
         <property
               default="BZ2"
               name="ZipEditor.archiveType"/>
      </content-type>
      <content-type
            base-type="archive"
            describer="zipeditor.model.ZipContentDescriber"
            id="tarbz2file"
            name="%content-type.name.6"
            priority="normal">
         <property
               default="TBZ"
               name="ZipEditor.archiveType"/>
      </content-type>
      <file-association
            content-type="ZipEditor.zipfile"
            file-extensions="jar, zip, war, ear"/>
      <file-association
            content-type="ZipEditor.gzipfile"
            file-extensions="gz"/>
      <file-association
            content-type="ZipEditor.tarfile"
            file-extensions="tar"/>
      <file-association
            content-type="ZipEditor.targzfile"
            file-extensions="tar.gz, tgz"/>
      <file-association
            content-type="ZipEditor.tarbz2file"
            file-extensions="tar.bz2, tbz"/>
      <file-association
            content-type="ZipEditor.bz2file"
            file-extensions="bz2"/>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="zipeditor.ZipEditor"
            contributorClass="zipeditor.ZipEditorActionBarContributor"
            default="true"
            icon="icons/zipicon.gif"
            id="zipeditor.ZipEditor"
            name="%editor.name.0">
         <contentTypeBinding contentTypeId="ZipEditor.zipfile"/>
         <contentTypeBinding contentTypeId="ZipEditor.gzipfile"/>
         <contentTypeBinding contentTypeId="ZipEditor.tarfile"/>
         <contentTypeBinding contentTypeId="ZipEditor.targzfile"/>
         <contentTypeBinding contentTypeId="ZipEditor.bz2file"/>
         <contentTypeBinding contentTypeId="ZipEditor.tarbz2file"/>
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.editors.documentProviders">
      <provider
            class="zipeditor.search.ResultEditorInputProvider"
            id="zipeditor.search.ResultEditorInputProvider"
            inputTypes="zipeditor.search.ResultEditorInput">
      </provider>
   </extension>
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            name="zipeditor.search.match">
      </type>
   </extension>
   <extension
         point="org.eclipse.ui.editors.markerAnnotationSpecification">
      <specification
            annotationType="zipeditor.search.match"
            colorPreferenceKey="search.match.color"
            colorPreferenceValue="206,204,247"
            highlightPreferenceKey="search.match.highlight"
            highlightPreferenceValue="true"
            includeOnPreferencePage="true"
            label="%searchResult.label"
            overviewRulerPreferenceKey="search.match.overview"
            overviewRulerPreferenceValue="true"
            presentationLayer="0"
            textPreferenceKey="search.match.text"
            textPreferenceValue="true">
      </specification>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="zipeditor.PreferenceInitializer"/>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="zipeditor.ZipContentProvider"
            icon="icons/zipicon_closed.gif"
            id="zipeditor.navigatorContent"
            labelProvider="zipeditor.ZipLabelProvider"
            name="%navigatorContent.name.0"
            providesSaveables="true">
         <triggerPoints>
            <or>
               <instanceof value="org.eclipse.core.resources.IFile"/>
               <instanceof value="zipeditor.model.Node"/>
               <instanceof value="org.eclipse.core.resources.IWorkspaceRoot"/>
               <instanceof value="org.eclipse.core.resources.IFolder"/>
               <instanceof value="org.eclipse.core.resources.IProject"/>
            </or>
         </triggerPoints>
         <possibleChildren>
            <or>
               <instanceof value="zipeditor.model.Node"/>
               <instanceof value="org.eclipse.core.resources.IWorkspaceRoot"/>
               <instanceof value="org.eclipse.core.resources.IFile"/>
               <instanceof value="org.eclipse.core.resources.IFolder"/>
               <instanceof value="org.eclipse.core.resources.IProject"/>
            </or>
         </possibleChildren>
         <commonSorter
               class="zipeditor.ZipSorter"
               id="zipeditor.ZipSorter">
            <parentExpression>
               <or>
                  <instanceof value="zipeditor.model.Node"/>
                  <instanceof value="org.eclipse.core.resources.IFile"/>
               </or>
            </parentExpression>
         </commonSorter>
         <actionProvider
               class="zipeditor.actions.ZipActionProvider"
               overrides="org.eclipse.ui.navigator.resources.OpenActions">
            <enablement>
               <or>
                  <instanceof value="zipeditor.model.Node"/>
                  <!--instanceof value="org.eclipse.core.resources.IFile"/-->
               </or>
            </enablement>
         </actionProvider>
         <dropAssistant
               class="zipeditor.ZipDropAssistant"
               id="zipeditor.ZipDropAssistant">
            <possibleDropTargets>
               <or>
                  <instanceof
                        value="org.eclipse.core.resources.IFile">
                  </instanceof>
                  <instanceof
                        value="zipeditor.model.Node">
                  </instanceof>
               </or></possibleDropTargets>
         </dropAssistant>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <contentExtension pattern="zipeditor.navigatorContent"/>
         </includes>
      </viewerContentBinding>
      <dragAssistant
            class="zipeditor.ZipDragAssistant"
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
      </dragAssistant>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="zipeditor.ZipNodePropertyPage"
            id="zipeditor.ZipNodePropertyPage"
            name="%page.name.0"
            objectClass="zipeditor.model.ZipNode"/>
      <page
            class="zipeditor.TarNodePropertyPage"
            id="zipeditor.TarNodePropertyPage"
            name="%page.name.1"
            objectClass="zipeditor.model.TarNode"/>
   </extension>
   <extension
         point="org.eclipse.search.searchPages">
      <page
            showScopeSection="false"
            label="%searchPage.name"
            icon="icons/search.gif"
            class="zipeditor.search.ZipSearchPage"
            sizeHint="460,160"
            id="zipeditor.search.ZipSearchPage">
      </page>
   </extension>
   <extension
         point="org.eclipse.search.searchResultViewPages">
		<viewPage
			id="zipeditor.search.ZipSearchResultPage"
			searchResultClass="zipeditor.search.ZipSearchResult"
			class="zipeditor.search.ZipSearchResultPage">
		</viewPage>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.ui.category.edit"
            id="zipeditor.command.selectPattern"
            name="%command.name">
      </command>
      <command
            categoryId="org.eclipse.ui.category.edit"
            id="zipeditor.command.reverseSelection"
            name="%command.name.0">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="zipeditor.command.selectPattern"
            contextId="org.eclipse.ui.contexts.dialogAndWindow"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2++">
      </key>
      <key
            commandId="zipeditor.command.reverseSelection"
            contextId="org.eclipse.ui.contexts.dialogAndWindow"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+*">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            id="zipeditor.CommonZipActionGroup"
            adaptable="true">
         <menu
               icon="icons/zipicon.gif"
               id="zipEditor.menu"
               label="%archive.label"
               path="group.openWith">
            <groupMarker
                  name="zipEditor.open">
            </groupMarker>
            <separator
                  name="zipEditor.sep1">
            </separator>
            <groupMarker
                  name="zipEditor.close">
            </groupMarker>
         </menu>
         <action
               class="zipeditor.actions.CloseZipFileAction"
               enablesFor="*"
               id="CloseZipFileAction"
               label="%CloseZipFileAction.label"
               menubarPath="zipEditor.menu/zipEditor.close"
               tooltip="%CloseZipFileAction.tooltip">
            <enablement>
               <objectState
                     name="sessionProperty"
                     value="zipeditor.open=true">
               </objectState>
            </enablement>
         </action>
         <action
               class="zipeditor.actions.SaveZipFileAction"
               id="SaveZipFileAction"
               label="%SaveZipFileAction.label"
               menubarPath="zipEditor.menu/zipEditor.open"
               tooltip="%SaveZipFileAction.tooltip">
            <enablement>
            	<objectState name="sessionProperty" value="zipeditor.dirty=true"/>
            </enablement>
         </action>
         <action
               class="zipeditor.actions.OpenZipFileAction"
               id="OpenZipFileAction"
               label="%OpenZipFileAction.label"
               menubarPath="zipEditor.menu/zipEditor.open"
               tooltip="%OpenZipFileAction.tooltip">
            <enablement>
            	<objectState name="sessionProperty" value="zipeditor.open=false"/>
            </enablement>
         </action>
         <visibility>
         	<or>
         		<or>
	         		<objectState name="contentTypeId" value="ZipEditor.zipfile"/>
	         		<objectState name="contentTypeId" value="ZipEditor.gzipfile"/>
         		</or>
				<or>
	         		<objectState name="contentTypeId" value="ZipEditor.tarfile"/>
	         		<objectState name="contentTypeId" value="ZipEditor.targzfile"/>
				</or>         		
         	</or>	
         </visibility>
      </objectContribution>
   </extension>

</plugin>
